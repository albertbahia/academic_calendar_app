<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cohort %>
    <%= f.collection_select :cohort, Cohort.order(:class_code),:id, :class_code %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :event_type %>
    <%= f.select(:event_type) do %>
      <% [["university, cohort, class creation in bootcampspot"],
        ["Data Entry for all these dates into albert's academic calendar app"],
        ["Pre Work created in BCS"],
        ["Students added to BCS"],
        ["Instructional Staff added to BCS"],
        ["Gitlab repository creation"],
        ["Students added to gitlab group and project"],
        ["Invite Instructional staff to repository, invite pavan, jed, nate, ahmed, warren, joe cardin"],
        ["Notify Instructional Staff and academic team that repository was created and they've been invited"],
        ["Syllabus Generation and adding syllabus to the repository"],
        ["Slack Room Generation"],
        ["Students invited to slack room, instructional staff invited to slack room"],
        ["AMA"],
        ["Dry Run"],
        ["Class Start Date"],
        ["Assessment 1 Study Guide"],
        ["Generate Assessment 1"],
        ["Assessment 1"],
        ["Assessment 1 Results"],
        ["Assessment 2 Study Guide"],
        ["Generate Assessment 2"],
        ["Assessment 2"],
        ["Assessment 2 Results"],
        ["Assessment 3 Study Guide"],
        ["Generate Assessment 3"],
        ["Assessment 3 "],
        ["Assessment 3 Results"],
        ["Demo Day"],
        ["Interview Blitzes will go here as well"],
        ["Project 1 Internal Demo Day"],
        ["Project 2 Internal Demo Day"],
        ["Project 3 Internal Demo Day"]].each do |type| %>
        <%= content_tag(:option, type.first) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :time_to_generate %>
    <%= f.number_field :time_to_generate %>
    <%= f.select(:time_to_generate) do %>
      <% [[0.5], [1], [1.5], [2], [2.5], [3], [3.5]].each do |hour| %>
        <%= content_tag(:option, hour.first) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <br>
    <%= f.select(:notes) do %>
      <% [["week 8 you'd have to notify the instructional staff via slack, push up the study guide to the class repo "],
      ["at the start of week 10, generate the week 1 assessment through survey gizmo"],
      ["at the end of week 10, alerts instructional staff to slack out the link to the assessment "],
      ["at the end of week 11, push answer key document to the class repo and email all students who've submitted the assessment their results and link to that answer key document "],
      ["week 17 you'd have to notify the instructional staff via slack, push up the study guide to the class repo "],
      ["at the start of week 19, generate the week 1 assessment through survey gizmo"],
      ["at the end of week 19, alerts instructional staff to slack out the link to the assessment"],
      ["at the end of week 20,  push answer key document to the class repo, email all students who've submitted the assessment their results and a link to the answer key for them to self grade"],
      ["week 21 you'd have to notify the instructional staff via slack, push up the study guide to the class repo "],
      ["at the start of week 24, generate the week 1 assessment through survey gizmo"],
      ["at the end of week 24, alerts instructional staff to slack out the link to the assessment"],
      ["at the end of week 24,  push answer key document to the class repo, email all students who've submitted the assessment their results and a link to the answer key for them to self grade"]].each do |note| %>
        <%= content_tag(:option, note.first) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :owner %>
    <%= f.select(:owner) do %>
      <% [["Student Success Manager"], ["Academic - Albert"], ["Outcomes"], ["Instructional Staff"]].each do |person| %>
        <%= content_tag(:option, person.first) %>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
