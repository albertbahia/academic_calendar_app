<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Class code</th>
      <th>Event type</th>
      <th>Notes</th>
      <th>Time to generate</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.date %></td>
        <td><%= cohort.class_code %></td>
        <td><%= cohort.event_type %></td>
        <td><%= cohort.notes %></td>
        <td><%= cohort.time_to_generate %></td>
        <td><%= cohort.owner %></td>
        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

