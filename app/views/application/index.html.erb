<h1>Academic Calendar</h1>

<% @cohorts.each do |cohort| %>
  <table class="cohort">
    <tbody>
      <thead>
        <tr>
          <th>Class code</th>
          <td><%= cohort.class_code %></td>
          <td><%= link_to 'Show', cohort %></td>
          <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
          <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <tr>
          <th>Date</th>
          <th>Event Type</th>
          <th>Notes</th>
          <th>Owner</th>
        </tr>
      </thead>
      <tbody>
        <% cohort.events.sort_by(&:date).each do |event| %>
        <tr>
          <td><%= event.date %></td>
          <td><%= event.event_type %></td>
          <td><%= event.notes %></td>
          <td><%= event.owner %></td>
        </tr>
        <% end %>
      </tbody>
    </tbody>
  </table>
<% end %>

<%= link_to 'Create New Cohort', new_cohort_path %>
<%= link_to 'Add New Event', new_event_path %>